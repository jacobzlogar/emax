(provide 'ui)
(set-frame-font "Iosevka 14")
(menu-bar-mode -1)
(tool-bar-mode -1)
(toggle-scroll-bar -1)
(setq global-display-line-numbers-mode t)
(setq line-number-mode t)
;

(let ((bg-color (face-attribute 'font-lock-comment-delimiter-face :background))
      (fg-color (face-attribute 'font-lock-comment-delimiter-face :foreground)))
  (custom-set-faces
   `(org-block-begin-line ((t (:foreground ,fg-color))))
   `(org-block-end-line ((t (:foreground ,fg-color))))))

(let ((bg-color (face-attribute 'default :background)))
  (custom-set-faces
   `(line-number ((t (:background ,bg-color))))))
